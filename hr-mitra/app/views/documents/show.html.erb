<div class="col-lg-12">
    <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body" >
            <h2 class="text-center">Document Details</h2>
            <div class="row">
                <div class= "col-lg-6">
                    <%if @document.image.attached?%>
                        <%= image_tag  @document.image %>
                    <%end%>
                    
                    <p class="lead"><strong>Name</strong>
                    <%=@document.name%></p>
                    
                    <p class="lead"><strong>Doc type</strong>
                    <%=@document.doc_type.present? ? @document.doc_type : 'NA'%></p>
                    
                    <p class="lead"><strong>Emp name</strong>
                    <%=@document.employee.name%></p>
                </div>
            </div>
             <%= link_to "edit" , edit_document_path(@document), class:"btn btn-outline-primary btn-lg  rounded-0"%>
              <%= link_to "Back to document list", documents_path  , class: "btn btn-outline-primary btn-lg rounded-0"%>
        </div>

    </div>
</div>  
<div class="col-lg-12">
    <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body" >
            <h2 class="text-center">Employees Details</h2>
            <div class="row">
                <div class= "col-lg-6">
                    <h3 class= "text-center"> Personal details</h3>
                    <p class="lead"><strong>First Name</strong>
                    <%=@employee.first_name%></p>
                    <p class="lead"><strong>middle Name</strong>
                    <%=@employee.middle_name.present? ? @employee.middle_name : 'NA'%></p>
                    <p class="lead"><strong>Last Name</strong>
                    <%=@employee.last_name%></p>
                    <p class="lead"><strong>Personal Email</strong>
                    <%=@employee.personal_email%></p>
                </div>
                 <div class= "col-lg-6">
                    <h3 class= "text-center"> Address details</h3>
                    <p class="lead"><strong>Address</strong>
                    <%=@employee.address_line_1%></p>
                    <p class="lead"><strong>City</strong>
                    <%=@employee.city%></p>
                    <p class="lead"><strong>State</strong>
                    <%=@employee.state%></p>
                    <p class="lead"><strong>pincode</strong>
                    <%=@employee.pincode%></p>
                    <p class="lead"><strong>country</strong>
                    <%=@employee.country%></p>
                </div>
            </div>
            
            <%if @employee.documents.present? %>
                <div class= "row mt-5" >
                    <h2 class= "text-center"> Employee Documents</h2>
                        <% @employee.documents.each do|document|%>
                            <div class ="card mb-4">
                                <div class="card-body"> 
                                    <%if  document.image.attached?%>
                                        <div class="col-lg-4">
                                            <%=image_tag document.image ,class: "img-fluid"%>
                                        </div>
                                    <% end %>
                                    <div class="col-lg-4">
                                       <p class="lead"> <%= document.name%> </p>
                                    </div>
                                    <div class="col-lg-4">
                                        <p class="lead"> <%= document.doc_type%> </p>
                                    </div>
                                </div>
                            </div> 
                        <% end %> 
                </div>
            <% end %>

        
             <%= link_to "edit" , edit_employee_path(@employee), class:"btn btn-outline-primary btn-lg   rounded-0"%>
              <%= link_to "Back to employee list", employees_path  , class: "btn btn-outline-primary btn-lg rounded-0"%>
        </div>

    </div>
</div>  